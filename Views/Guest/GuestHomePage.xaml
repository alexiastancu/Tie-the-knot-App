<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wedding_Planning_App.Views.Guest.GuestHomePage"
             Title="Guest Home Page">
    <VerticalStackLayout Padding="20">
        <CollectionView ItemsSource="{Binding GuestWeddings}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="10">
                        <StackLayout>
                            <Label Text="{Binding FiancesName}" FontAttributes="Bold" TextColor="Black" FontSize="Large" />
                            <Label Text="{Binding WeddingDate, StringFormat='{0:dd/MM/yyyy}'}" FontAttributes="Bold" TextColor="Black" FontSize="Medium" />
                            <Label Text="{Binding LocationId}" TextColor="Black"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>